# Makefile for Webauth source
# $Id: Makefile.in 1729 2003-02-14 19:08:39Z eagle $

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

@SET_MAKE@

SUBDIRS = libwebauth bindings modules utils

.PHONY: all clean depend install install-webkdc

all: Makefile
	@for subdir in $(SUBDIRS); do \
	    echo "making $@ in $$subdir"; \
	    ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
	done

clean depend install:
	@for subdir in $(SUBDIRS); do \
	    echo "making $@ in $$subdir"; \
	    ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
	done

install-webkdc:
	cd webkdc && $(MAKE) install
